{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Rust Auth Service",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/services/auth-service/target/debug/auth-service",
      "args": [],
      "cwd": "${workspaceFolder}/services/auth-service",
      "sourceLanguages": ["rust"],
      "env": {
        "DATABASE_URL": "postgres://bookmarket:bookmarket123@localhost:5432/bookmarket",
        "REDIS_URL": "redis://localhost:6379",
        "JWT_SECRET": "your-super-secret-jwt-key-change-in-production",
        "PORT": "3001"
      },
      "preLaunchTask": "cargo build auth-service"
    },
    {
      "name": "Debug Go Vendor Service",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/vendor-service/main.go",
      "cwd": "${workspaceFolder}/services/vendor-service",
      "env": {
        "DATABASE_URL": "postgres://bookmarket:bookmarket123@localhost:5432/bookmarket",
        "REDIS_URL": "redis://localhost:6379",
        "JWT_SECRET": "your-super-secret-jwt-key-change-in-production",
        "PORT": "3002"
      },
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Elixir Order Service",
      "type": "mix_task",
      "request": "launch",
      "task": "phx.server",
      "projectDir": "${workspaceFolder}/services/order-service",
      "env": {
        "DATABASE_URL": "postgres://bookmarket:bookmarket123@localhost:5432/bookmarket",
        "REDIS_URL": "redis://localhost:6379",
        "JWT_SECRET": "your-super-secret-jwt-key-change-in-production",
        "PORT": "3003"
      }
    },
    {
      "name": "Test Rust Auth Service",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/services/auth-service/target/debug/deps/auth_service-*",
      "args": [],
      "cwd": "${workspaceFolder}/services/auth-service",
      "sourceLanguages": ["rust"],
      "preLaunchTask": "cargo test auth-service"
    },
    {
      "name": "Test Go Vendor Service",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/services/vendor-service",
      "cwd": "${workspaceFolder}/services/vendor-service",
      "showLog": true
    }
  ]
}
